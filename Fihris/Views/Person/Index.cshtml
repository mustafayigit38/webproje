@model IEnumerable<Fihris.Models.Person>
@{
    var count = 1;
}


<div class="card">
    <div class="card-header">
      
            <div class="d-flex align-items-center justify-content-between">
                <h3>people</h3>
                <a href="@Url.Action("Create","Person")" class="btn btn-primary">Yeni Kişi Ekle</a>
            </div>
        
        
    </div>

    <div class="card-body">

        @if (Model is not null && Model.Count()>0)
        {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Sıra</th>
                <th>Id</th>
                <th>Name</th>
                <th>LastName</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(count++)</td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.LastName</td>
                    </tr>
                }
            </tbody>
            </table>
        }else
        {
            <p class="text-danger">Herhangi bir kişi bilgisi bulunamadı!</p>

        }
    </div>
</div>
